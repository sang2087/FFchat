<ul id="chat_box">
	<% @chat_messages.each do |chat_message|%>
    <li> 
		<%=chat_message.created_at.strftime('%-d/%-m/%Y %k:%M:%S')%> : <%=chat_message.name%> | <%=chat_message.message%>
		</li>
	<%end%>
</ul>

<hr>
<input id="msg_input" type="text" name="message">
<button id="post_button">Post</button>
<input id="user_name" type="hidden" value="<%=@user.name%>"> 
<input id="user_id" type="hidden" value="<%=@user.id%>"> 
